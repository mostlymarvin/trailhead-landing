{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "teal",
					"color": "#00AEB3",
					"name": "Teal"
				},
				{
					"slug": "Navy",
					"color": "#294574",
					"name": "Navy"
				},
				{
					"slug": "yellow",
					"color": "#EFB920",
					"name": "Yellow"
				},
        {
					"slug": "grey-dk",
					"color": "#616161",
					"name": "Dark Grey"
				},
         {
					"slug": "grey-md",
					"color": "#BDBDBD",
					"name": "Medium Grey"
				},
        {
					"slug": "grey-lt",
					"color": "#F3F4EE",
					"name": "Light Grey"
				},
        {
					"slug": "black",
					"color": "#000000",
					"name": "Black"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			],
			"gradients": [
				{
					"slug": "primary-white",
					"gradient": "linear-gradient(#0073aa 49.9%,#fff 50%)",
					"name": "Primary color to white"
				},
				{
					"slug": "white-primary",
					"gradient": "linear-gradient(#fff 49.9%,#0073aa 50%)",
					"name": "Horizontal white to Primary color"
				}
			],
			"duotone": [
				{
					"colors": [ "#00a0d2", "#0073aa"],
					"slug": "secondary-primary",
					"name": "Secondary and primary"
				},
				{
					"colors": ["#0073aa", "#f0f0f0"],
					"slug": "primary-contrast",
					"name": "Primary and Contrast"
				}
			]
		},
		"layout": {
			"contentSize": "1100px",
			"wideSize": "1440px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6uyw4BMUTPHvxw6XweuBCY.woff2"
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6u9w4BMUTPHh6UVewqFGC_p9dw.woff2"
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6u9w4BMUTPHh50XewqFGC_p9dw.woff2"
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6u8w4BMUTPHjxswXiWrFCbw7A.woff2"
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6u_w4BMUTPHjxsI5wqPGQ3s5dwt7w.woff2"
						},
						{
							"fontFamily": "Lato",
							"fontStyle": "italic",
							"fontWeight": "900",
							"src": "http://localhost:10018/wp-content/uploads/fonts/S6u_w4BMUTPHjxsI3wiPGQ3s5dwt7w.woff2"
						}
					],
					"fontFamily": "Lato, sans-serif",
					"name": "Lato",
					"slug": "lato"
				}
			],
			 "fontSizes": [
        {
          "fluid": false,
          "name": "Base",
          "size": "1rem",
          "slug": "base"
        },
        {
          "fluid": false,
          "name": "XX small",
          "size": "1.4rem",
          "slug": "xx-small"
        },
        {
          "fluid": true,
          "name": "Extra small",
          "size": "clamp( 1.4rem, 1.6rem, 1.6rem)",
          "slug": "extra-small"
        },
        {
          "fluid": true,
          "name": "Small",
          "size": "clamp(1.6rem, 1.8rem, 1.8rem)",
          "slug": "small"
        },
        {
          "fluid": true,
          "name": "Medium",
          "size": "clamp( 1.8rem, 2.1rem, 2.1rem )",
          "slug": "medium"
        },
        {
          "fluid": true,
          "name": "X Medium",
          "size": "clamp( 2.4rem, 2.8rem, 2.8rem )",
          "slug": "medium-plus"
        },
        {
          "fluid": true,
          "name": "Large",
          "size": "clamp( 2.8rem, 3.8rem, 3.8rem )",
          "slug": "large"
        },
        {
          "fluid": true,
          "name": "XL",
          "size": "clamp( 3.8rem, 6rem, 6rem )",
          "slug": "x-large"
        },
        {
          "fluid": true,
          "name": "XXL",
          "size": "clamp( 6rem, 8rem, 8rem )",
          "slug": "xx-large"
        }
      ]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-comments-form": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/navigation": {
				"css": "& .wp-block-site-title{ margin:0; font-weight:400;}",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--navy)"
						},
						"typography": {
							"textDecoration": "underline"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--teal)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--teal)"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--teal)"
							}
						}
					}
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/query-pagination": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/search": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"typography": {
					"lineHeight": "1"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--grey-dk)"
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--navy)",
					"text": "var(--wp--preset--color--grey-lt)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "400"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--navy)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--grey-dk)"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--grey-dk)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--navy)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--teal)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--teal)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--teal)"
					}
				}
			}
		},
		"spacing": {
			"padding": {
				"right": "var(--wp--preset--spacing--50)",
				"left": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--lato)",
			"lineHeight": "1.6"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		}
	]
}
